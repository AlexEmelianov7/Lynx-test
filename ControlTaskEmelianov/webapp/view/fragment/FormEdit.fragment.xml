<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin" >
		<f:Form
			validateFieldGroup="onValidateFieldGroup"
            editable="true">
			<f:title>
				<core:Title text="{i18n>ttlChangeableInfo}" />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="{i18n>ttlTextInfo}">
					<f:formElements>
						<f:FormElement label="{i18n>lMaterialText}">
							<f:fields>
								<Input 
									value="{path: 'MaterialText', type: 'sap.ui.model.odata.type.String'}"
									fieldGroupIds="formInput"
                                    maxLength="128"
                                    width="250px"
                                    valueLiveUpdate="true"
									enabled="{= !${objectView>/editMode} &amp;&amp; ${MaterialText} !== '' || undefined || null}"
									required="true"/>
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>lMaterialDescription}">
							<f:fields>
								<Input 
                                    value="{MaterialDescription}"
                                    maxLength="256"
                                    width="250px"
                                    valueLiveUpdate="true"
                                    enabled="{= !${objectView>/editMode} &amp;&amp; ${MaterialDescription} !== '' || undefined || null}"
                                />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>lRating}">
							<f:fields>
								<Input 
									value="{
                    					path: 'Rating', 
                    					type: 'sap.ui.model.odata.type.Decimal', 
                    					constraints: {precision: '3', scale: '2'}
                					}" 
									fieldGroupIds="formInputRating"
                                    width="250px"
                                    valueLiveUpdate="true"
									enabled="{= !${objectView>/editMode} &amp;&amp; ${Rating} !== '' || undefined || null}"
									required="true"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
				<f:FormContainer title="{i18n>ttlGroupsInfo}">
					<f:formElements>
						<f:FormElement label="{i18n>lGroupText}">
							<f:fields>
								<ComboBox
									fieldGroupIds="formComboBox"
									width="15em"
									selectedKey="{GroupID}"
									items="{
										path: '/zjblessons_base_Groups',
										sorter: { 
											path: 'GroupText',
											descending: true 
										},
										filters: [
											{
												path: 'GroupText',
												operator: 'NE',
												value1: null
											}
										]
									}">
									<core:Item 
										key="{GroupID}" 
										text="{GroupText}"/>
								</ComboBox>
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>lSubGroupText}">
							<f:fields>
								<ComboBox
									fieldGroupIds="formComboBox"
									width="15em"
									selectedKey="{SubGroupID}"
									items="{
										path: '/zjblessons_base_SubGroups',
										sorter: { 
											path: 'SubGroupText',
											descending: true 
										},
										filters: [
											{
												path: 'SubGroupText',
												operator: 'NE',
												value1: null
											}
										]
									}">
									<core:Item 
										key="{SubGroupID}" 
										text="{SubGroupText}"/>
								</ComboBox>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
		<f:Form>
			<f:title>
				<core:Title text="{i18n>ttlInfo}" />
			</f:title>
			<f:layout>
				<f:ResponsiveGridLayout
					labelSpanXL="4"
					labelSpanL="4"
					labelSpanM="12"
					labelSpanS="12"
					adjustLabelSpan="false"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="1"
					singleContainerFullSize="false" />
			</f:layout>
			<f:formContainers>
				<f:FormContainer title="{i18n>ttlCreationInfo}">
					<f:formElements>
						<f:FormElement label="{i18n>lCreated}">
							<f:fields>
								<Text 
									text="{
										path: 'Created', 
										type: 'sap.ui.model.type.DateTime',
										formatOptions: {
											style: 'medium'
										}
									}"
                                />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>lCreatedBy}">
							<f:fields>
								<Text 
									text="{
										path: 'CreatedByFullName', 
										formatter: '.formatter.formatName'
									}" />
							</f:fields>
						</f:FormElement>
						<f:FormElement label="{i18n>lModified}">
							<f:fields>
								<Text 
									text="{
										path: 'Modified', 
										type: 'sap.ui.model.type.DateTime',
										formatOptions: {
											style: 'long'
										}
									}" 
							    />
							</f:fields>
						</f:FormElement>
                        <f:FormElement label="{i18n>lModifiedBy}">
							<f:fields>
								<Text 
									text="{
										parts: ['ModifiedByFullName', 'Modified'],
										formatter: '.formatter.creationInfo'
									}"/>
							</f:fields>
						</f:FormElement>
					</f:formElements>
				</f:FormContainer>
			</f:formContainers>
		</f:Form>
	</VBox>
</core:FragmentDefinition>